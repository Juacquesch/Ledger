<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import ledger.user_interface.ui_controllers.AccountDropdown?>
<?import ledger.user_interface.ui_controllers.ConverterDropdown?>
<?import ledger.user_interface.ui_controllers.FileSelectorButton?>
<fx:root fx:id="addAcctGridPane" alignment="CENTER" maxHeight="150.0" maxWidth="500.0" minHeight="150.0"
         minWidth="500.0" prefHeight="150.0" prefWidth="500.0" style="-fx-background-color: #ffffff;" type="GridPane"
         xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="363.0" minWidth="10.0" prefWidth="349.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="369.0" minWidth="10.0" prefWidth="351.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="369.0" minWidth="10.0" prefWidth="351.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="40.0" minHeight="3.0" prefHeight="40.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Rectangle fx:id="orangeHeaderBar" arcHeight="5.0" arcWidth="5.0" fill="#ffa81f" height="40.0" stroke="#ffa81f"
                   strokeType="OUTSIDE" width="500.0" GridPane.columnSpan="3" GridPane.halignment="CENTER"
                   GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS"/>
        <FileSelectorButton fx:id="fileSelector" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                            GridPane.valignment="CENTER"/>
        <ConverterDropdown fx:id="converterSelector" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                           GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
        <AccountDropdown fx:id="accountDropdown" prefWidth="150.0" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                         GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
        <Button fx:id="importButton" mnemonicParsing="false" text="Import" GridPane.columnIndex="1"
                GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
    </children>
</fx:root>
