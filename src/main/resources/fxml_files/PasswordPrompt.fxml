<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<fx:root stylesheets="@../css/colorStyle.css" type="GridPane" xmlns="http://javafx.com/javafx/8.0.76-ea"
         xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Pane fx:id="header" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
              minWidth="-Infinity"/>
        <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm Password"
              GridPane.valignment="CENTER">
            <font>
                <Font name="Calibri" size="28.0"/>
            </font>
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Text>
        <Text fx:id="promptText" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Please enter your password to continue using TransACT" textAlignment="CENTER"
              wrappingWidth="347.736328125" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
            <font>
                <Font name="Calibri" size="18"></Font>
            </font>
        </Text>
        <PasswordField fx:id="password" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" onAction="#onEnter" prefHeight="48.0" prefWidth="250.0"
                       promptText="Password" style="-fx-background-color: #abcafc;" GridPane.halignment="CENTER"
                       GridPane.rowIndex="2">
        </PasswordField>
        <Button fx:id="loginBtn" mnemonicParsing="false" prefHeight="42.0" prefWidth="170.0" text="Continue"
                GridPane.halignment="CENTER" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets bottom="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
    </children>
</fx:root>
